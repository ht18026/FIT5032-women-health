{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["vite/client"],
    "useDefineForClassFields": true
  },
  "include": ["src", "env.d.ts", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
